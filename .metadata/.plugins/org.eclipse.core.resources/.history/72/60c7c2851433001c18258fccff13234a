import java.util.*;
public class Test04 {

	public static void main(String[] args) {
		
		int i=0,k=1;
		String s;
		char c;
		Scanner scanner=new Scanner(System.in);
		System.out.println("输入若干英文单词");
		s=scanner.next();
		while(i<s.length()){
			c=s.charAt(i++);
			System.out.print(i+" "+c);
			if(c==' '){
				k++;
				continue;
			}
		}
		System.out.println("单词个数为："+k);
		
	}
	
}
