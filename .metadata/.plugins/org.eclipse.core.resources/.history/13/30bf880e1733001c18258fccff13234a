import java.util.*;
public class Test05 {

	public static void main(String[] args) {
		
		int i=0,k=1,j;
		String s;
		char c;
		int a[]=new int[26];
		Scanner scanner=new Scanner(System.in);
		System.out.println("输入一句英文(单词用空格或逗号隔开)");
		s=scanner.nextLine();
		while(i<s.length()){
			c=s.charAt(i++);
			if(c==' '||c==','){
				k++;
			}
			System.out.print(c);
			//a[c-38]++;
		}
		System.out.println("单词个数："+k);
//		for(i=0;i<a.length;i++){
//			System.out.println((char)i+38+"的个数为"+a[i]+"个");
//		}
		
	}
	
}
